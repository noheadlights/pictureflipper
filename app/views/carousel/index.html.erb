<div id="myCarousel" class="carousel slide center">
  <!-- Carousel items -->
  <div class="carousel-inner">
    <% name, url = @photos.first; @photos.delete(name) %>
    <div class="active item"><%= image_tag url, class: 'img-polaroid' %></div>
    <%= @photos.each do |name, url| %>
      <div class="item"><%= image_tag url, class: 'img-polaroid' %></div>
    <% end %>
  </div>
  <!-- Carousel nav -->
  <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
  <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
</div>
